<div class="comment-row">
  <%= gravatar_for p.user, size: 32 %>
  <div class="comment-content">
    <%= link_to p.user.name, profile_path(p.user) %>
    <%= c.content %>
  </div>
  <%= link_to comment_path(id: c.id), method: :delete do %>
    <div class="delete" data-title="Delete comment" >
      <% if c.user_id == current_user.id || p.user_id === current_user.id %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  <% end %>
</div>
