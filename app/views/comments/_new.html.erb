<%= form_for :comment, url: comments_path do |f| %>
  <div class="field" id=<%= "#{post_id}-comment" %> >
    <%= f.text_area :content, placeholder: "Write a comment..." %>
    <%= f.hidden_field :post_id, value: post_id %>
  </div>
  <div class="action">
    <%= f.submit "Submit" %>
  </div>
<% end %>