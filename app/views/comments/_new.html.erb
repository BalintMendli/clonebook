<%= form_for :comment, url: comments_path do |f| %>
  <div class="field" id=<%= "#{post_id}-comment" %> >
    <%= f.label :content, "New comment:" %><br />
    <%= f.text_area :content, rows: 4 %>
    <%= f.hidden_field :post_id, value: post_id %>
  </div>
  <div class="action">
    <%= f.submit "Submit Comment" %>
  </div>
<% end %>