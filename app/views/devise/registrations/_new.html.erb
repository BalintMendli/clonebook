<h2 class="title">Sign up</h2>
<div class="sub-title">
  Itâ€™s free and always will be.
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field name">
    <%= f.text_field :first_name, placeholder: "First name" %>
    <%= f.text_field :last_name, placeholder: "Last name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "New password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation" %>
  </div>

  <div class="field">
    <%= f.label :birthday, class: "label" %>
    <%= f.date_field :birthday, max: 13.years.ago %>
  </div>

  <%= f.label :gender, class: "label" %>
  <%= f.radio_button :gender, "Female" %>
  <%= f.label :gender, "Female", value: "Female", class: "radio" %>
  <%= f.radio_button :gender, "Male" %>
  <%= f.label :gender, "Male", value: "Male", class: "radio" %>

  <div class="action">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= link_to "Sign in with Facebook", omniauth_authorize_path(resource_name, 'facebook'), class: 'fb-signin' %>
